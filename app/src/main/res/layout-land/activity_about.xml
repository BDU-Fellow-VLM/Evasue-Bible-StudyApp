<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".aboutActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        app:title="Evasue Bible Study"
        app:titleTextColor="#fff"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#af532c"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/toolbar">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
    <ImageView
        android:id="@+id/vlm_logo"
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:scaleType="centerCrop"
        android:scaleX="1.12"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:src="@mipmap/graphic" />

    <TextView
        android:id="@+id/description"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/vlm_desc"
        />
    <TextView
        android:id="@+id/vlm_title"
        android:textSize="18dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BDU FELLOWSHIP VLM"/>
    <TextView
        android:id="@+id/separetor"
        style="?android:listSeparatorTextViewStyle"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:background="#000"
        android:paddingTop="5dp" />

    <TextView
        android:id="@+id/feedback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ሀሳብ አስተያየታችሁን "
        android:textStyle="bold" />
    <TextView
        android:id="@+id/phno"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ስልክ ፡ 0943352812"
        android:layout_below="@id/feedback"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
    <ImageView
        android:id="@+id/fb_logo"
        android:layout_width="40dp"
        android:layout_marginLeft="15sp"
        android:layout_height="40dp"
        android:src="@mipmap/fb" />

        <TextView
            android:id="@+id/fb_url"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="44dp"
            android:layout_marginTop="13dp"
            android:layout_toRightOf="@+id/fb_logo"
            android:focusable="true"
            android:text="@string/fb_url"
            android:textColor="#008ada"
            android:textColorLink="#008ada" />
    <ImageView
        android:id="@+id/youtube_logo"
        android:layout_below="@+id/fb_logo"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:scaleX="1.2"
        android:scaleY="1.2"
        android:src="@mipmap/youtube_logo"/>

        <TextView
            android:id="@+id/youtubeid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fb_url"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="26dp"
            android:layout_toRightOf="@+id/youtube_logo"
            android:focusable="true"
            android:text="@string/youtube_url"
            android:textColor="#008ada"
            android:textColorLink="#008ada"
            android:layout_marginStart="25dp"
            android:layout_toEndOf="@+id/youtube_logo" />
    </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>